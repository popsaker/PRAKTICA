<Window x:Class="CapitalLeasing.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CAPITAL LEASING" 
        Height="841" 
        Width="1383"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Стиль для навигационных кнопок -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#007BFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки поиска -->
        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для переключателей -->
        <Style x:Key="ToggleStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#007BFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#007BFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для выпадающих списков -->
        <Style x:Key="DropdownStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                            Grid.Column="2"
                                            Focusable="false"
                                            IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                            ClickMode="Press"/>
                                <ContentPresenter x:Name="ContentSite"
                                                Margin="{TemplateBinding Padding}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="366*"/>
        </Grid.RowDefinitions>
        <!-- Верхняя панель с контактами -->
        <Border Background="#333333" Height="40" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Москва" Foreground="White" FontSize="14" Margin="0,0,30,0"/>
                <TextBlock Text="8.322.228-14-88" Foreground="White" FontSize="14" Margin="0,0,30,0"/>
                <Button Content="Контакты" Style="{StaticResource NavButtonStyle}" Padding="5,0"/>
            </StackPanel>
        </Border>

        <!-- Основная навигационная панель -->
        <Border Background="#222222" Height="60" VerticalAlignment="Top" Margin="0,40,0,0" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип -->
                <TextBlock Text="CAPITAL LEASING" 
                         Foreground="White" 
                         FontSize="24" 
                         FontWeight="Bold"
                         VerticalAlignment="Center"
                         Margin="86,0,1035,0" Grid.ColumnSpan="2"/>

                <!-- Навигационные кнопки -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Каталог авто" Style="{StaticResource NavButtonStyle}" Margin="0,0,30,0"/>
                    <Button Content="Клиентский сервис" Style="{StaticResource NavButtonStyle}" Margin="0,0,30,0"/>
                    <Button Content="Личный кабинет" Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>

                <!-- Иконка профиля -->
                <Border Grid.Column="2" 
        Width="40" 
        Height="40" 
        Background="#007BFF" 
        CornerRadius="20"
        Margin="0,0,20,0"
        VerticalAlignment="Center"
        MouseDown="ProfileIcon_MouseDown">
                    <TextBlock Text="👤" 
             FontSize="20" 
             HorizontalAlignment="Center" 
             VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,6,0,0" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Фильтры и поиск -->
                <Border Background="#2A2A2A" 
                        CornerRadius="10" 
                        Margin="40,20,40,20" 
                        Padding="30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовки -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30">
                            <TextBlock Text="Каталог автомобилей" 
                                     Foreground="White" 
                                     FontSize="20" 
                                     FontWeight="Bold"
                                     Margin="0,0,40,0"/>
                            <TextBlock Text="Лизинговые предложения" 
                                     Foreground="#999999" 
                                     FontSize="20" 
                                     FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Переключатели Новые/С пробегом -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                            <RadioButton x:Name="NewRadio" 
                                       Style="{StaticResource ToggleStyle}"
                                       Content="Новые"
                                       GroupName="CarType"
                                       IsChecked="True"/>
                            <RadioButton x:Name="UsedRadio" 
                                       Style="{StaticResource ToggleStyle}"
                                       Content="С пробегом"
                                       GroupName="CarType"/>
                        </StackPanel>

                        <!-- Фильтры -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Марка -->
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Марка" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                                <ComboBox x:Name="BrandCombo" Style="{StaticResource DropdownStyle}">
                                    <ComboBoxItem Content="Любая" IsSelected="True"/>
                                    <ComboBoxItem Content="Bugatti"/>
                                    <ComboBoxItem Content="Mercedes"/>
                                    <ComboBoxItem Content="BMW"/>
                                    <ComboBoxItem Content="Audi"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Модель -->
                            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                <TextBlock Text="Модель" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                                <ComboBox x:Name="ModelCombo" Style="{StaticResource DropdownStyle}">
                                    <ComboBoxItem Content="Любая" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Стоимость -->
                            <StackPanel Grid.Column="2" Margin="0,0,15,0">
                                <TextBlock Text="Стоимость" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                                <ComboBox x:Name="PriceCombo" Style="{StaticResource DropdownStyle}">
                                    <ComboBoxItem Content="Любая" IsSelected="True"/>
                                    <ComboBoxItem Content="До 1 млн"/>
                                    <ComboBoxItem Content="1-3 млн"/>
                                    <ComboBoxItem Content="3-5 млн"/>
                                    <ComboBoxItem Content="От 5 млн"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Кнопка Найти -->
                            <StackPanel Grid.Column="3" VerticalAlignment="Bottom" Margin="15,0,0,0">
                                <Button x:Name="SearchButton" 
                                      Style="{StaticResource SearchButtonStyle}"
                                      Content="Найти!"
                                      Width="120"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Результаты поиска -->
                <Border Grid.Row="1" 
                        Background="#2A2A2A" 
                        CornerRadius="10" 
                        Margin="40,0,40,40" 
                        Padding="30"
                        Height="300">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок результатов -->
                        <TextBlock Text="Результаты поиска" 
                                 Foreground="White" 
                                 FontSize="18" 
                                 FontWeight="Bold"
                                 Margin="0,0,0,20"/>

                        <!-- Контейнер для автомобилей -->
                    </Grid>
                </Border>

            </Grid>
        </ScrollViewer>
        <TextBox HorizontalAlignment="Left" Margin="29,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="55" Height="44" SelectionTextBrush="{x:Null}" BorderBrush="{x:Null}" RenderTransformOrigin="-0.378,0.334" Grid.RowSpan="2">
            <TextBox.Background>
                <ImageBrush ImageSource="/Image1.png"/>
            </TextBox.Background>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Margin="78,409,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="414" Height="190" SelectionTextBrush="{x:Null}" BorderBrush="{x:Null}" Grid.Row="1">
            <TextBox.Background>
                <ImageBrush ImageSource="/Image2.png"/>
            </TextBox.Background>
        </TextBox>

    </Grid>
</Window>