<Window x:Class="CapitalLeasing.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CAPITAL LEASING - Регистрация" 
        Height="1328" 
        Width="634"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Стиль для основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007BFF"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007BFF"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для CheckBox -->
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#212529"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,30"/>
        </Style>

        <!-- Стиль для меток -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Стиль для поля с картинкой -->
        <Style x:Key="CaptchaStyle" TargetType="Border">
            <Setter Property="Background" Value="#E9ECEF"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>

    <!-- ИСПРАВЛЕННАЯ ЧАСТЬ: убраны кривые маргины -->
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Black" Margin="0,0,-132,-60">
            <StackPanel Margin="40" VerticalAlignment="Center">

                <!-- Заголовок -->
                <TextBlock Text="CAPITAL LEASING"
                         FontSize="36"
                         FontWeight="Bold"
                         Foreground="White"
                         TextAlignment="Center"
                         Margin="0,0,0,40"/>

                <!-- Контейнер формы -->
                <Border Background="#FF3E3E3E"
                        BorderBrush="#E9ECEF"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="40"
                        Margin="0,0,0,30">

                    <StackPanel>

                        <!-- Заголовок формы -->
                        <TextBlock Text="Регистрация"
                                 Style="{StaticResource HeaderStyle}" Foreground="White"/>

                        <!-- Фамилия -->
                        <TextBlock Text="Фамилия"
                                 Style="{StaticResource LabelStyle}" Foreground="White"/>
                        <TextBox x:Name="LastNameTextBox"
                               Style="{StaticResource TextBoxStyle}"/>

                        <!-- Имя и Отчество в одной строке -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Имя -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Имя"
                                         Style="{StaticResource LabelStyle}" Foreground="White"/>
                                <TextBox x:Name="FirstNameTextBox"
                                       Style="{StaticResource TextBoxStyle}" Margin="0,0,0,0"/>
                            </StackPanel>

                            <!-- Отчество -->
                            <StackPanel Grid.Column="2"/>
                        </Grid>

                        <!-- Логин -->
                        <TextBlock Text="Придумайте логин для входа"
                                 Style="{StaticResource LabelStyle}" Foreground="White"/>
                        <TextBox x:Name="LoginTextBox"
                               Style="{StaticResource TextBoxStyle}"/>

                        <!-- Пароль -->
                        <TextBlock Text="Придумайте пароль"
                                 Style="{StaticResource LabelStyle}" Foreground="White"/>
                        <PasswordBox x:Name="PasswordBox"
                                   Style="{StaticResource PasswordBoxStyle}"/>

                        <!-- Телефон -->
                        <TextBlock Text="Телефон"
                                 Style="{StaticResource LabelStyle}" Foreground="White"/>
                        <TextBox x:Name="PhoneTextBox"
                               Style="{StaticResource TextBoxStyle}"/>

                        <!-- Email -->
                        <TextBlock Text="Email"
                                 Style="{StaticResource LabelStyle}" Foreground="White"/>
                        <TextBox x:Name="EmailTextBox"
                               Style="{StaticResource TextBoxStyle}"/>

                        <!-- Код с картинки -->
                        <TextBlock Text="Код с картинки ?"
                                 Style="{StaticResource LabelStyle}" Foreground="White"/>

                        <!-- Поле для картинки капчи -->
                        <Border Style="{StaticResource CaptchaStyle}">
                            <TextBlock Text="CAPTCHA"
                                     Foreground="#6C757D"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     FontSize="24"
                                     FontWeight="Bold"/>
                        </Border>

                        <!-- Поле для ввода капчи -->
                        <TextBox x:Name="CaptchaTextBox"
                               Style="{StaticResource TextBoxStyle}"
                               Margin="0,0,0,20"/>

                        <!-- CheckBox для согласия -->
                        <CheckBox x:Name="AgreementCheckBox"
                                Style="{StaticResource CheckBoxStyle}"
                                Content="Согласен на обработку и передачу персональных данных"
                                Foreground="White"/>

                        <!-- Кнопка Продолжить -->
                        <Button x:Name="ContinueButton"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Content="Продолжить"
                              Margin="0,20,0,0"/>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>