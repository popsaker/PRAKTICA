<Window x:Class="CapitalLeasing.AddEditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="700" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="Добавить/Редактировать товар">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Background="White">
            <TextBlock Text="Добавить товар" 
                     FontSize="20" 
                     FontWeight="Bold"
                     Margin="0,0,0,20"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Название -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="0,10,10,10"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="NameTextBox" Margin="0,10,0,10"/>

                <!-- Цена -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Цена:" Margin="0,10,10,10"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="PriceTextBox" Margin="0,10,0,10"/>

                <!-- Там желтый -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Ежимесячный платеж:" Margin="0,10,10,10"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="YellowTextBox" Margin="0,10,0,10"/>

                <!-- Количество -->
                <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,10,10,10" Text="Мощность:"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="QuantityTextBox" Margin="0,10,0,10"/>

                <!-- ИТП -->
                <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,10,10,10"><Run Language="ru-ru" Text="КПП"/><Run Text=":"/></TextBlock>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="ITPTextBox" Margin="0,10,0,10"/>

                <!-- ЦВКУ 4 Урала -->
                <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,10,10,10"><Run Text="Ц"/><Run Language="ru-ru" Text="вет кузова"/><Run Text=":"/></TextBlock>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="CVKUTextBox" Margin="0,10,0,10"/>

                <!-- Год -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Год:" Margin="0,10,10,10"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="YearTextBox" Margin="0,10,0,10"/>

                <!-- Расходный -->
                <TextBlock Grid.Row="7" Grid.Column="0" Margin="0,10,10,10"><Run Text="Рас"/><Run Language="ru-ru" Text="положение руля"/><Run Text=":"/></TextBlock>
                <TextBox Grid.Row="7" Grid.Column="1" x:Name="ExpendableTextBox" Margin="0,10,0,10"/>

                <!-- Предел -->
                <TextBlock Grid.Row="8" Grid.Column="0" Margin="0,10,10,10"><Run Text="Пр"/><Run Language="ru-ru" Text="обег"/><Run Text=":"/></TextBlock>
                <TextBox Grid.Row="8" Grid.Column="1" x:Name="LimitTextBox" Margin="0,10,0,10"/>

                <!-- Признаки оказания -->
                <TextBlock Grid.Row="9" Grid.Column="0" Margin="0,10,10,10"><Run Language="ru-ru" Text="Количество ключей"/><Run Text=":"/></TextBlock>
                <TextBox Grid.Row="9" Grid.Column="1" x:Name="ServiceSignsTextBox" Margin="0,10,0,10"/>

                <!-- Город -->
                <TextBlock Grid.Row="10" Grid.Column="0" Text="Город:" Margin="0,10,10,10"/>
                <TextBox Grid.Row="10" Grid.Column="1" x:Name="CityTextBox" Margin="0,10,0,10"/>

                <!-- Расходы обоих -->
                <TextBlock Grid.Row="11" Grid.Column="0" Text="Расходы обоих:" Margin="0,10,10,10"/>
                <TextBox Grid.Row="11" Grid.Column="1" x:Name="BothExpensesTextBox" Margin="0,10,0,10"/>

                <!-- Кнопки -->
                <StackPanel Grid.Row="13" Grid.ColumnSpan="2" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          Margin="0,20,0,0">
                    <Button x:Name="CancelButton" 
                          Content="Отмена" 
                          Width="100" 
                          Height="35"
                          Margin="0,0,10,0"/>
                    <Button x:Name="SaveButton" 
                          Content="Сохранить" 
                          Width="100" 
                          Height="35"
                          Background="#3498DB"
                          Foreground="White"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>