<Window x:Class="CapitalLeasing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapitalLeasing"
        mc:Ignorable="d"
        Title="CAPITAL LEASING" 
        Height="841" 
        Width="1383"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Стиль для основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки Telegram -->
        <Style x:Key="TelegramButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0088CC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#006699"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004D66"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007BFF"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007BFF"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для ссылок -->
        <Style x:Key="LinkStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#6C757D"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}"
                                 Foreground="{TemplateBinding Foreground}"
                                 VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                            <Setter Property="Foreground" Value="#0056B3"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#212529"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,30"/>
        </Style>

        <!-- Стиль для меток -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Black">
            <StackPanel Margin="40" VerticalAlignment="Center">

                <!-- Заголовок -->
                <TextBlock Text="CAPITAL LEASING"
                         FontSize="36"
                         FontWeight="Bold"
                         Foreground="White"
                         TextAlignment="Center"
                         Margin="0,0,0,40" Width="320" Background="Black"/>

                <!-- Контейнер формы -->
                <Border Background="#FF3E3E3E"
                        BorderBrush="#E9ECEF"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="40"
                        Margin="0,0,0,30">

                    <StackPanel>

                        <!-- Заголовок формы -->
                        <TextBlock Text="Войти"
                                 Style="{StaticResource HeaderStyle}" Foreground="White"/>

                        <!-- Поле Логин -->
                        <TextBlock Text="Логин"
                                 Style="{StaticResource LabelStyle}" Foreground="White"/>
                        <TextBox x:Name="LoginTextBox"
                               Style="{StaticResource TextBoxStyle}"/>

                        <!-- Поле Пароль -->
                        <TextBlock Text="Пароль"
                                 Style="{StaticResource LabelStyle}" Foreground="White"/>
                        <PasswordBox x:Name="PasswordBox"
                                   Style="{StaticResource PasswordBoxStyle}"/>

                        <!-- Кнопка Войти -->
                        <Button x:Name="LoginButton"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Content="Войти" />

                        <!-- Ссылка "Не можете войти?" -->
                        <Button x:Name="ForgotPasswordButton"
                              Style="{StaticResource LinkStyle}"
                              Content="Не можете войти?"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,30"/>

                        <!-- Разделитель -->
                        <Border Height="1"
                              Background="#E9ECEF"
                              Margin="0,0,0,30" Cursor=""/>

                        <!-- Кнопка Регистрации -->
                        <Button x:Name="RegisterButton"
                              Background="Transparent"
                              BorderBrush="#6C757D"
                              BorderThickness="1"
                              Foreground="#6C757D"
                              FontSize="14"
                              FontWeight="Medium"
                              Padding="20,10"
                              Content="Зарегистрироваться"
                              Cursor="Hand"
                              HorizontalAlignment="Stretch">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation To="#0056B3"
                                                          Duration="0:0:0.2"
                                                          Storyboard.TargetProperty="(Button.BorderBrush).(SolidColorBrush.Color)"/>
                                            <ColorAnimation To="#0056B3"
                                                          Duration="0:0:0.2"
                                                          Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation To="#6C757D"
                                                          Duration="0:0:0.2"
                                                          Storyboard.TargetProperty="(Button.BorderBrush).(SolidColorBrush.Color)"/>
                                            <ColorAnimation To="#6C757D"
                                                          Duration="0:0:0.2"
                                                          Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>

                    </StackPanel>
                </Border>

                <!-- Контактная информация -->
                <StackPanel HorizontalAlignment="Center">

                    <!-- Номер телефона -->
                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15">
                        <TextBlock Text="📞"
                                 FontSize="20"
                                 Margin="0,0,10,0" Background="Black"/>
                        <TextBlock Text="8 322 228-14-88"
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 />
                    </StackPanel>

                    <!-- Кнопка Telegram -->
                    <Button x:Name="TelegramButton"
                          Style="{StaticResource TelegramButtonStyle}"
                          HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✈️"
                                     FontSize="20"
                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Написать в телеграм"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Ссылка Помощь -->
                    <Button x:Name="HelpButton"
                          Style="{StaticResource LinkStyle}"
                          Content="Помощь"
                          HorizontalAlignment="Center"
                          Margin="0,15,0,0"/>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
        <Image Height="100" Width="100"/>
        <Image HorizontalAlignment="Left" Height="111" Margin="424,10,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="-2.231,-1.842"/>
        <TextBox HorizontalAlignment="Left" Margin="396,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118" Height="92" SelectionTextBrush="{x:Null}" BorderBrush="{x:Null}">
            <TextBox.Background>
                <ImageBrush ImageSource="/Image1.png"/>
            </TextBox.Background>
        </TextBox>
    </Grid>
</Window>